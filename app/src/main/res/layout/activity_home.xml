<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#9C2780"
    tools:context=".Login">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_marginTop="120dp"
        android:layout_height="wrap_content" >

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"

            android:layout_width="match_parent"
            android:layout_height="256dp" />


    </androidx.cardview.widget.CardView>
<!-- ................................................................ -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="13.5mm"

        android:layout_marginTop="20mm"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"

                android:text="Use los botones para navegar"
                android:textColor="#17B0C3"
                android:textSize="15dp"
                android:textStyle="bold" />



        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:onClick="horarioActual"
            app:cardCornerRadius="30dp"
            app:srcCompat="@drawable/horario"
            tools:ignore="OnClick" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="82dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="-69.5dp"
            android:onClick="alumnoInfo"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/info"
            tools:ignore="OnClick" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="82dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-69.5dp"
            android:onClick="horarioDisponible"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/horario_disponible"
            tools:ignore="OnClick" />

    <!--    <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="82dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-69.5dp"

            android:layout_height="match_parent"
            app:srcCompat="@drawable/pago" /> -->


        <ImageButton
            android:id="@+id/logout"
            android:layout_width="80dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="-69.5dp"
            android:layout_height="match_parent"
            android:onClick="login"
            app:srcCompat="@drawable/logout" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>